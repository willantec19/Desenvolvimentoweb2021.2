{{#each pokemons}}
<div class="col">
          <div class="card shadow-sm">
           <img src="{{this.cover}}" width="200" class="rounded mx-auto d-block" alt="{{this.nome}}">

            <div class="card-body">
                <h5 class="card-title text-center">{{this.nome}}</h5>
             
              <div class="d-flex justify-content-between align-items-center">
                  
                <div class="btn-group mx-auto">
                  <button type="button" class="btn btn-sm btn-outline-success" disabled>{{this.tipo}}</button>

                  <a href="/pokemons/{{this.id}}" class="btn btn-lg btn-outline-danger">Mais Detalhes</a>
                  
                </div>
               
              </div>
            </div>
          </div>
        </div>
{{/each}}

