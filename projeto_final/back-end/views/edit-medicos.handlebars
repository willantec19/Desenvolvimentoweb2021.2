{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="container-fluid col-10 mt-2">
    <div class="justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Cadastro</h3>
            
            <div class="card">
                <div class="card-body">
                <h5 class="text-center mb-4">Dados Pessoais</h5>
                <form class="form-card" action="/edit-medicos" method="post">
                    <div class="align-middle ">
                        <input type="hidden" name="id" value="{{medicos._id}}">
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-4"></span></label> <input type="text" id="nome" name="nome" placeholder="Nome" value="{{medicos.nome}}" > </div>
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-3"></label> <input type="text" id="email" name="email" placeholder="Email" value="{{medicos.email}}"> </div>
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-3"></label> <input type="text" id="celular" name="celular" placeholder="Celular" value="{{medicos.celular}}"> </div>
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-3"></label> <input type="text" id="CRM" name="CRM" placeholder="CRM" value="{{medicos.CRM}}"> </div>
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-3"></label>  
                            <select class="form-select" aria-label="Default select example" id="area">
                              <option selected>Área de Atuação</option>
                              {{#each categorias}}
                              <option value="{{this._id}}">{{this.nome}}</option>
                              {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                      <div class="form-group col-sm-6"> <button class="btn-block btn-primary">Alterar</button> </div>
                    </div>
                </form>
            </div></div>
        </div>
        </div>


    </div>


