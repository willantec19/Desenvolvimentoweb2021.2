<div class="container-fluid col-10 mt-2">
    <div class="justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Cadastro</h3>
            
            <div class="card">
                <div class="card-body">
                <h5 class="text-center mb-4">Nova Categoria</h5>
                <form class="form-card" action="/cadastro-categoria" method="post">
                    <div class="align-center">
                        <div class="form-group col-sm-6 mt-2 flex-column d-flex"> <label class="form-control-label px-4"></span></label> <input type="text" id="nome" name="nome" placeholder="Nome" > </div>
                        
                    </div>
                    <div class="row justify-content-end">
                      <div class="form-group col-sm-6"> <button class="btn-block btn-primary">Cadastrar</button> </div>
                    </div>
                </form>
            </div></div>
        </div>
        </div>
<div class="table-responsive-sm col-md-7 col-lg-7">  
<table class="table table-dark table-striped mt-2 ">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th></th>
    </tr>
  </thead>
{{#each categorias}}
  <tbody >
    <tr>
      <td>{{this.nome}}</td>
     
      <td>
            <a href="/editar-categoria/{{this._id}}">
                <button class="btn btn-success ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
